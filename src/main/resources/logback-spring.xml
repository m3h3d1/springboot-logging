<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [%-5level] [%X{apiEndpoint}] [%X{httpMethod}] [%logger{36}] - %msg%n</pattern>-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%X{apiEndpoint}] [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Sifting appender -->
    <appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>apiEndpoint</key>
            <defaultValue>default</defaultValue>
        </discriminator>
        <sift>
            <appender name="FILE-${apiEndpoint}" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>logs/${apiEndpoint}.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <fileNamePattern>logs/${apiEndpoint}.%d{yyyy-MM-dd}.log</fileNamePattern>
                    <maxHistory>30</maxHistory>
                </rollingPolicy>
                <encoder>
                    <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%X{apiEndpoint}] [%logger{36}] - %msg%n</pattern>
                </encoder>
            </appender>
        </sift>
    </appender>

    <!-- Root logger -->
    <root level="info">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="SIFT" />
    </root>

    <!-- Logger for Controller and Service -->
    <logger name="com.mehedi.logging.controller" level="debug"/>
    <logger name="com.mehedi.logging.service" level="debug"/>

</configuration>