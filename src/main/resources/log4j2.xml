<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="trace" monitorInterval="30">
    <Properties>
        <Properties file="logging.properties"/>
    </Properties>

    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%highlight{%level}] [%X{uniqueId}] [%X{apiEndpoint}] [%class{1}.%M:%L] - %msg%n}"/>
        </Console>

        <!-- Routing Appender for dynamic file naming based on ThreadContext -->
        <Routing name="RoutingAppender">
            <Routes pattern="$${ctx:apiLogFileName}">
                <!-- Dynamic route based on ctx:apiLogFileName -->
                <Route>
                    <RollingFile name="Rolling-${ctx:apiLogFileName}"
                                 fileName="logs2/${ctx:apiLogFileName}.log"
                                 filePattern="logs2/archived/${ctx:apiLogFileName}-%d{yyyy-MM-dd}-%i.log.gz"
                                 createOnDemand="true">
                        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%level] [%X{uniqueId}] [%X{apiEndpoint}] [%class{1}.%M:%L] - %msg%n"/>
                        <Policies>
                            <SizeBasedTriggeringPolicy size="${bundle:logging:max-file-size}"/>
                            <TimeBasedTriggeringPolicy interval="1"/>
                        </Policies>
                        <DefaultRolloverStrategy max="${bundle:logging:max-history}"/>
                    </RollingFile>
                </Route>
            </Routes>
        </Routing>
    </Appenders>

    <Loggers>
<!--        <Root level="${bundle:logging:logging.root-log-level}">-->
        <Root level="${bundle:logging:root-log-level}">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="RoutingAppender"/>
        </Root>
    </Loggers>
</Configuration>